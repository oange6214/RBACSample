<Page
    x:Class="RBACSample.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:RBACSample.Helper"
    xmlns:local="clr-namespace:RBACSample.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:RBACSample.ViewModels"
    Title="LoginPage"
    d:DataContext="{d:DesignInstance viewmodels:LoginViewModel}"
    mc:Ignorable="d">

    <Border
        d:Background="White"
        d:Height="600"
        d:Width="800">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <Grid Grid.Row="0" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition MinWidth="100" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="User Name: " />
                <TextBox
                    Grid.Column="1"
                    VerticalContentAlignment="Center"
                    Text="{Binding Username}" />
            </Grid>

            <Grid Grid.Row="1" Margin="0,0,0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition MinWidth="100" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="Password: " />
                <PasswordBox
                    x:Name="pb"
                    Grid.Column="1"
                    VerticalContentAlignment="Center"
                    PasswordChanged="PasswordBox_PasswordChanged" />
            </Grid>

            <Button
                Grid.Row="2"
                Command="{Binding LoginCommand}"
                Content="Login" />

            <Button Command="{Binding CreateUserCommand}" Content="Create user" />

            <TextBlock Text="{Binding Infomation}" />
        </StackPanel>
    </Border>
</Page>