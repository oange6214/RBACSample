<Page
    x:Class="RBACSample.Views.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RBACSample.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RegisterPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Margin="0,0,0,10" Text="Username" />
            <TextBox Margin="0,0,0,20" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Margin="0,0,0,10" Text="Password" />
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,20" />
            <TextBlock Margin="0,0,0,10" Text="Confirm Password" />
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,20" />

            <TextBlock
                Margin="0,0,0,10"
                Foreground="Red"
                Text="{Binding InfoMessage}" />

            <Button Command="{Binding RegisterCommand}" Content="Register" />
        </StackPanel>
    </Grid>
</Page>